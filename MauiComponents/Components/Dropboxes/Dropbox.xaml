<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiComponents.Components.Dropboxes.Dropbox">
    <Frame HeightRequest="40" BorderColor="#E5E5E5" VerticalOptions="Center" CornerRadius="5"  Padding="5,0" Grid.Column="0">
        <Grid ColumnSpacing="0" RowSpacing="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Grid  BackgroundColor="Transparent" VerticalOptions="Center" ColumnSpacing="0" RowSpacing="0" Grid.Column="0">
                <Picker SelectedItem="{Binding SelectedItem}"  ItemDisplayBinding="{Binding ItemDisplayBinding}"  SelectedIndexChanged="SelectedIndexChanged"  ItemsSource="{Binding ItemsSource}" Title="{Binding Title}">
                </Picker>
            </Grid>
            <Grid Grid.Column="1">
                <Image Source="angledown.png"/>
            </Grid>
        </Grid>
    </Frame>
</Grid>